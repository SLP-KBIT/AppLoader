      /   .form-group
      /     .row
      /       .col-xs-4 style="text-align:right"
      /         label.control-label タグ1
      /       .col-xs-8
      /         input.form-control type="text" placeholder="タグ名"
      /   .row
      /     .col-xs-4 style="text-align:right"
      /       button.btn.btn-default.btn-sm
      /         span.glyphicon.glyphicon-plus
      /         |&nbspフォームを追加


      .form-group
        .row
          .col-xs-4[style="text-align:right"]
            = f.label '説明文'
          .col-xs-8
            = f.text_area :summary, placeholder: "マークダウン記法で書いてください。", size: '30×30'

      / div style="margin:40px 0px"
      /   .form-group
      /     .row
      /       .col-xs-4 style="text-align:right"
      /         = f.label :picture "キャプチャ画像1"
      /       .col-xs-8
      /         = f.file_field :icon
        / .row
        /   .col-xs-4 style="text-align:right"
        /     button.btn.btn-default.btn-sm
        /       span.glyphicon.glyphicon-plus
        /       |&nbsp フォームを追加


      .form-group
        .row
          .col-xs-4 style="text-align:right"
            = f.label '動画'
          .col-xs-8
            = f.file_field :movie

      div[style="text-align:right"]
        = f.submit 'アップロード'
