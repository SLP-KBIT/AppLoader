.row
  .col-xs-2
  .col-xs-8

    h1 ゲームのアップロード
    = form_for @game do |f|
      .form-group
        .row
          .col-xs-4 style="text-align:right"
            = f.label :game_file, 'アップロードするファイル', class: 'control-label'
          .col-xs-8
            = f.file_field :game_file

      .form-group
         .row
           .col-xs-4 style="text-align:right"
             = f.label :format, 'プラットフォーム'
           .col-xs-8
             = f.select :format, Game::FORMAT.invert, {}, class: 'form-control'

      .form-group
        .row
          .col-xs-4 style="text-align:right"
            = f.label :title, 'タイトル'
          .col-xs-8
            = f.text_field :title, class: 'form-control', placeholder: "ゲームのタイトル"

      .form-group
        .row
          .col-xs-4 style="text-align:right"
            = f.label :icon, 'バージョン'
          .col-xs-8
            = f.text_field :version, class: 'form-control', placeholder: "(例) 1.1.2"


      .form-group
        .row
          .col-xs-4 style="text-align:right"
            = f.label :icon, 'アイコン画像'
          .col-xs-8
            = f.file_field :icon

      .form-group
        .row
          .col-xs-4 style="text-align:right"
            = f.label '作成したグループ'
          .col-xs-8
            = f.collection_select :group_id, @groups, :id, :name, {}, class: 'form-control'

